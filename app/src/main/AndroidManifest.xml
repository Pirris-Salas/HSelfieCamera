<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pirris.hselfiecamera">

    <uses-feature android:name="android.hardware.camera"/> //Configuración de la cámara
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> //Permiso para agregar en la memoria externa
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/> //Permiso para acceder a la memoria externa y leerla
    <uses-permission android:name="android.permission.CAMERA"/> //Acceso a la cámara
    <uses-permission android:name="android.permission.INTERNET"/>//Acceso a internet
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/> //ESTADO DE LA RED, UBICACIÓN

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity"/>
        <activity android:name=".auth.AuthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>